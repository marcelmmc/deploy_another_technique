---
const { dataUsed, title, reverse, vizText } = Astro.props;
---
<div class=`flex items-center justify-center flex-col px-12 pb-10` style="margin-top:2em">
    <h1 class=`text-3xl font-bold py-4 w-full ${reverse ? "text-left" : "text-right"} text-gray-700 px-24`>{title}</h1>

    <div class=`w-full flex md:${reverse ? "flex-row-reverse" : "flex-row"}`>
      <div class="w-1/3 divide-x p-6 flex flex-col justify-center items-center">
        <div class="
        h-full 
        max-w-sm 
        p-10
        flex-col
        gap-4
        py-12
        font-bold
        justify-center
        text-gray-100
        h-min
        bg-indigo-700 dark:bg-indigo-500 border border-gray-200 rounded-lg drop-shadow dark:bg-gray-800 dark:border-gray-700
        flex 
        items-center">
            <h1 class="text-2xl w-full">Behind the Viz</h1>
          <code class="bg-slate-400 rounded shadow-md p-4">
            {Object.entries(dataUsed).map((key) => {
              return (
                <p>
                  <span class="bg-emerald-500 font-bold">{key[0]}</span>: {key[1]};
                </p>
              );
            })}
          </code>
          <p class="text-md font-medium">
            {vizText}
         </p>
        </div>
      </div>
      <div class="w-2/3">
        <slot /> 
    </div>
    </div>
  
    <div class="flex items-center justify-center flex-col pb-10" style="margin-top:2em">
